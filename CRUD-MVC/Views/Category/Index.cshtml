@model List<Category>


<div class="container">
    <div class="col-6 ">
        <h2 class="text-primary">
        Lista de categoria          
        </h2>
    </div>
    <div class="col-6 text-end">
        <a asp-controller="Category" asp-action="Create" class="btn btn-primary"> <i class="bi bi-database-fill-add"></i>Crear nueva categoria</a>
    </div>

    <table class="table table-bordered">
    <tr>

        <th>
            Nombre de categoria
        </th>
        <th>
            Precio
        </th>
        <th>Opciones</th>

    </tr>
    <tbody>
       @foreach(var obj in Model.OrderBy(u=>u.Price))
        {
            <tr>
                <td>@obj.Name
                </td>
                <td>@obj.Price
                </td>
                <td>
                    <div class="w-100 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil"></i> Editar
                            </a>
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash3"></i> Eliminar
                            </a>

                    </div>
                </td>
            </tr>
        }

    </tbody>
</table>

</div>
